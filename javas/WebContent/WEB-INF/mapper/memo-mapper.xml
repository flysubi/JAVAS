<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memo">
	<insert id="send" parameterType="java.util.HashMap">
		insert into memo values (MEMO_SEQ.NEXTVAL, #{reciver}, #{id}, #{ta})
	</insert>
	
	<select id="list" parameterType="java.lang.String" resultType="java.util.HashMap">
		select * from memo where receiver = #{id } ORDER by num desc
	</select>
	
	<delete id="delete" parameterType="java.util.HashMap">
		delete memo where receiver = #{id} and
		<foreach collection="arr" item="num" separator=" or " open="(" close=")">
		num = #{num }
		</foreach>
	</delete>
</mapper>